{
  "manifest_version": 3,
  "name": "Churning Offer Automation",
  "version": "1.0",
  "description": "Automatically add credit card offers to your account.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://secure05b.chase.com/*",
    "https://global.americanexpress.com/*"
  ],

  "action": {
    "default_popup": "UI/popup.html"
  },

  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  }
}
